{
  "name": "mcp-memory",
  "version": "0.1.0",
  "description": "MCP server providing persistent memory capabilities for AI agents with web UI",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "dev:server": "wrangler dev",
    "dev:ui": "cd src/web-ui && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\"",
    "build:server": "wrangler deploy",
    "build:ui": "cd src/web-ui && npm run build",
    "build": "npm run build:server && npm run build:ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.32.0"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.6",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/express-session": "^1.18.2",
    "agents": "^0.0.113",
    "express-session": "^1.18.2",
    "google-auth-library": "^10.2.1",
    "ky": "^1.9.0",
    "zod": "^3.22.0"
  }
}
